import os ;

constant BOOST_ROOT : [ os.environ BOOST_ROOT ] ;
path-constant CWD : . ;

ECHO "path of BOOST_ROOT is " $(BOOST_ROOT) ;

project
    :   requirements
        <debug-symbols>on
        <include>$(BOOST_ROOT)
        <cxxflags>-std=c++11
        <cxxflags>-DBOOST_TEST_DYN_LINK
        <include>$(CWD)/../include
    :   default-build debug
        <link>shared
    :   build-dir bin
    ;

use-project /myString : $(CWD)/../src ;

alias dependencies :
    $(BOOST_ROOT)/stage/lib/libboost_unit_test_framework.so
    /myString//myString
    ;

exe test_main
    :   [ glob *.cpp : abandoned ]
        dependencies
    ;

