
path-constant CWD : . ;

project
    :   requirements
        <debug-symbols>on
        <cxxflags>-std=c++11
        <include>$(CWD)/include
    :   default-build debug
        <link>shared
    :   build-dir bin
    ;

use-project /myString : $(CWD)/src ;

alias dependencies :
    /myString//myString
    ;

exe main
    :   [ glob *.cpp : abandoned ]
        dependencies
    ;

